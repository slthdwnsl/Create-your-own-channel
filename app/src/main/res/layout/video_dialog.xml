<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#212121"
                android:id="@+id/imageView"
                android:src="@drawable/ic_baseline_delete_24"/>

            <LinearLayout
                android:id="@+id/delete_linearlayout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영상 삭제"
                    android:textSize="17sp"
                    android:fontFamily="@font/rokaf_sans_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_upload_video"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Video"
                    android:textSize="13sp"
                    android:fontFamily="@font/rokaf_sans_medium"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/edittext_bg"
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#212121"
                android:id="@+id/imageView_2"
                android:src="@drawable/ic_baseline_edit_24"/>

            <LinearLayout
                android:id="@+id/edit_linearlayout"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView_2"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영상 수정"
                    android:textSize="17sp"
                    android:fontFamily="@font/rokaf_sans_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_publish_post"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Video"
                    android:textSize="13sp"
                    android:fontFamily="@font/rokaf_sans_medium"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/edittext_bg"
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#212121"
                android:id="@+id/imageView_3"
                android:src="@drawable/share"/>

            <LinearLayout
                android:id="@+id/Share_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageView_3"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영상 공유"
                    android:textSize="17sp"
                    android:fontFamily="@font/rokaf_sans_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_relaease_poll"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share Video"
                    android:textSize="13sp"
                    android:fontFamily="@font/rokaf_sans_medium"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>